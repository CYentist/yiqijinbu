<div class="course">
    <%= link_to("Add a course", new_admin_course_path, class: "btn btn-primary pull-right") %>
  </div>
<table class="table table-boldered">
  <% @courses.each do |course| %>
  <tr>

    <td>
      <%= render_course_status(course) %>
      <%= link_to(course.title, admin_course_path(course)) %>
    </td>
    <td>

        <%= link_to("Edit", edit_admin_course_path(course)) %>
        <%= link_to("Destroy", admin_course_path(course), :method => :delete, :data => { :confirm => "Are you sure?" }) %>


        <% if course.is_hidden %>

          <%= link_to("Publish", publish_admin_course_path(course),  :method => :post, :class => "btn btn-xs btn-default") %>
        <% else %>
          <%= link_to("Hide", hide_admin_course_path(course),  :method => :post, :class => "btn btn-xs btn-default") %>
        <% end %>

    </td>
    <td>
      <%= course.created_at %>
    </td>
  </tr>
  <% end %>
</table>
