<h1> <%= @course.title %> </h1>
<div class="col-md-12">
  <span class="pull-right">
  <% if current_user && current_user.is_follower?(@course) %>
    <label class="label label-success"> 已关注 </label>
    <%= link_to("取消关注", unfollow_course_path(@course), method: :post, class: "btn btn-default") %>
  <% else %>
    <label class="label label-warning"> 未关注 </label>
    <%= link_to("关注", follow_course_path(@course), method: :post, class: "btn btn-default") %>
  <% end %>
</span>
</div>


<p>
  <%= simple_format(@course.description) %>

</p>

<%= link_to("发起活动", new_course_event_path(@course), class: "btn btn-default pull-right")%>
<div>

  <%= render :partial => "events", :collection => @events, :as => :event %>
</div>
